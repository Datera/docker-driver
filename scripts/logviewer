#!/usr/bin/env python

import argparse
import io
import json
import sys


def helper(msg, oneline):
    if oneline:
        return repr(msg)
    return msg


def main(args):
    f = None
    if not args.file:
        f = sys.stdin
    else:
        f = io.open(args.file)

    for line in f:
        if args.message_only:
            try:
                print(helper(json.loads(line)["msg"], args.oneline))
            except ValueError:
                pass
        else:
            try:
                print(json.dumps(json.loads(line), indent=4))
            except ValueError:
                pass

if __name__ == "__main__":
    parser = argparse.ArgumentParser()
    parser.add_argument("-m", "--message-only", action='store_true')
    parser.add_argument("-o", "--oneline", action='store_true')
    parser.add_argument("-f", "--file")
    args = parser.parse_args()
    main(args)
